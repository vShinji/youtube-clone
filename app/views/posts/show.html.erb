<p style="color: green"><%= notice %></p>
<%= render @post %>
<div>
  <%= @post.user.email  %>
  <%= @post.view_counter  %> views
  <%= time_ago_in_words(@post.created_at)  %> ago
  <% if user_signed_in? %>
    <%= button_to "like", likes_path, params: {like: {post_id:@post.id}}, method: :post  %>
    <%= @post.likes.count  %>
    <%= button_to "dislike", dislikes_path, params: {dislike: {post_id:@post.id}}, method: :post  %>
    <%= @post.dislikes.count  %>
  <% else %>
    <%= button_to "like", new_user_session_path %>
    <%= @post.likes.count  %>
    <%= button_to "dislike", new_user_session_path %>
    <%= @post.dislikes.count  %>
  <% end %>
  <% if user_signed_in? && current_user.id == @post.user_id %>
    <%= link_to "Edit", edit_post_path(@post) %> |
    <%= button_to "Delete", post_path(@post), method: :delete %>
  <% end %>
  <% if @post.video.attached? %>
    <%= link_to "Download", download_post_path(@post)  %>
  <% end %>
  <%= link_to "Back to posts", posts_path %>
</div>
